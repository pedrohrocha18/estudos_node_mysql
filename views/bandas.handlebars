<div>
  <h1>Favoritos</h1>
  {{#if check}}
    <p>Você ainda não adicionou dados.</p>
  {{else}}
    {{#each banda}}
      <div class="favorite">
        <a href="/bandas/{{this.id}}" class="music_band">{{this.musicband}}
          -
          {{this.nameband}}</a>
        <p class="band_style">{{this.styleband}}</p>
        <a class="band_edit" href="/bandas/edit/{{this.id}}">Editar</a>
        <form class="form" action="/bandas/remove/{{this.id}}" method="post">
          <input class="input_remove" type="submit" value="X" />
        </form>
      </div>
    {{/each}}
  {{/if}}
</div>